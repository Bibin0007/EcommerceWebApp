
<section class="d-flex justify-content-center h-100">
<div class="wrap-table-shopping-cart col-md-4">
              {{#each add}}
                <div style="border: 1px solid rgb(185, 190, 203); border-radius: 10px;" class="box mb-2">
                    <div style="width: 880px; height: 128px;" class="col-md-12">
                          {{!-- <small class="text-light fw-semibold">default</small> --}}
                       
                          <div class="form-check mt-1">
                             <input
                              name="addressId"
                              class="form-check-input"
                              type="radio"
                              value={{_id}}
                              id="defaultRadio1"
                            />
                            
                            <label class="form-check-label" for="defaultRadio1">{{name}}</label>
                            <label class="form-check-label" for="defaultRadio1">{{address}}</label>
                            <label class="form-check-label" for="defaultRadio1">{{mobile }}</label>
                            <label class="form-check-label" for="defaultRadio1">{{city}}</label>
                            <label class="form-check-label" for="defaultRadio1">{{zip}}</label>

                                <button style=    "height: 25px;
    position: absolute;
    width: 100px;
    margin-top: -93px;
    margin-left: 185px;" class="btn btn-warning"><a style="    font-size: 12px;
    text-decoration: none;
    color: black;
    position: absolute;
    margin-top: -8px;
    margin-left: -47px;
    height: 25px;
    width: 31px;
    padding-left: 32px;" href="/editAddress?id={{_id}}">edit</a></button>
     <button style="    height: 25px;
    width: 100px;
    margin-top: -96px;
    margin-left: 185px;" class="btn btn-danger"><a style="    font-size: 12px;
    text-decoration: none;
    color: black;
    position: absolute;
    margin-top: -8px;
    margin-left: -47px;
    height: 25px;
    width: 31px;
    padding-left: 32px;" href="/deleteAddress?id={{_id}}">Delete</a></button>

                          </div>


                          
                        </div>
                </div>

                {{/each}}

                
          </div>

<div class="wrap-table-shopping-cart col-md-6">
            <form action="/addAddress" method="post">
              <div class="mb-3">
                <label for="email" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="name"
                  
                  placeholder="Tony Stark "
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Phone</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="mobile"
                  placeholder="+91 12345 67812"
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="address"
                  placeholder="ironman@gmail.com"
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">City</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="city"
                  placeholder="Trivandrum"
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">State</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="state"
                  placeholder="Kerala"
                  autofocus
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">pincode</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="zip"
                  placeholder="928322"
                  autofocus
                />
              </div>


              <button class="btn btn-primary" type="submit">Add Address</button>


            </form>
          </div>

          </section>